{% extends 'layouts/default.twig' %}
{% block title %}
    Login
{% endblock %}
{% block content %}
    <div class="container">
        {% if name %}
            <hr>
            <h1>Welcome back, {{ name }}!</h1>
            <hr>
            <div class="buttonsMain">
                <a href="/user/logout" class="btn btn-danger">Logout</a>
            </div>
            <hr>
        {% endif %}
        {% if errors %}
            <div class="alert alert-danger" role="alert">
                {{ errors|nl2br }}
            </div>
            <div class="buttonsMain">
                <a href="/user/login" class="btn btn-success">Try again?</a>
            </div>
        {% else %}
        <div class="buttonsMain">
            <a href="/user/login" class="btn btn-success">Try to login</a>
        </div>
        {% endif %}
    </div>
{% endblock %}