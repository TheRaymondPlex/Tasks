{% extends 'layouts/default.twig' %}
{% block title %}
    Login
{% endblock %}
{% block style %}
    <style>
        body {
            background-color: rgb(35, 37, 50);
        }
    </style>
{% endblock %}
{% block script %}<script src="/public/js/FormValidation.js"></script>{% endblock %}
{% block content %}
    <div class="container">
        <form action="/user/login" method="post" id="login-form">
            <h1 class="display-6 text-center">SIGN IN</h1>
            <hr>
            {% if errors %}
            <div class="alert alert-danger" role="alert">
                {{ errors }}
            </div>
            {% endif %}
            <br>
            <div class="mb-3">
                <label for="email" class="form-label">Login (Email)</label>
                <span id="email-error"></span>
                <input type="email"
                       class="form-control"
                       id="email"
                       name="email"
                       value="{% if email %}{{ email }}{% endif %}"
                       placeholder="Enter your login (Email)">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>

            <div class="mb-3">
                <label for="pass" class="form-label">Password</label>
                <i class="bi bi-eye-slash" id="togglePassword"></i>
                <span id="pass-error"></span>
                <input type="password"
                       class="form-control"
                       id="pass"
                       name="pass"
                       value=""
                       placeholder="Enter your password">
            </div>

            <div class="buttonsMain">
                <a href="/" class="btn btn-secondary">Cancel</a>
                <button type="reset" onclick="clearAllFormInputs()" class="btn btn-dark">Clear</button>
                <button id="autocomplete" type="button" onclick="autoCompleteLoginForm()" class="btn btn-warning">Auto Complete</button>
                <button id="login" type="submit" class="btn btn-success">Login</button>
            </div>

        </form>
    </div>
{% endblock %}